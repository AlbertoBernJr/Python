#Fatorial number

print("Calculate a fatorial number.")
n=int(input("Value: "))

#counter that goes backwards
c=n

#the multiplication counter have to start with 1
f=1

while c!=0:
    print("{}".format(c), end="")
   
   
    if c>1:
        print("x", end="")
    
    else:
       print("=", end="")
    
    f=f*c
    c=c-1
    

print("{}".format(f))
